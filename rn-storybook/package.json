{
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "dev": "concurrently \"yarn storybook\" \"yarn start\"",
    "start": "expo start",
    "start:cache": "expo start -c",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "format": "eslint --fix . --ext .js,.jsx,.ts,.tsx",
    "dedup": "yarn-deduplicate --strategy highest yarn.lock",
    "bump": "yarn npm-check-updates -u",
    "deps:upgrade": "yarn sort-package-json && yarn bump && yarn dedup && yarn",
    "prestorybook": "rnstl",
    "storybook": "start-storybook -p 7007",
    "build-storybook": "build-storybook",
    "generate": "yarn plop --plopfile generators/plopfile.js"
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src",
        "./storybook"
      ],
      "pattern": "**/*.stories.js",
      "outputFile": "./storybook/storyLoader.js"
    }
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/__mocks__/globalMock.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base)"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^12.0.5",
    "@react-native-async-storage/async-storage": "~1.15.7",
    "@react-navigation/bottom-tabs": "^6.0.5",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.1.0",
    "concurrently": "^6.2.1",
    "expo": "~42.0.3",
    "expo-asset": "~8.3.3",
    "expo-constants": "~11.0.1",
    "expo-font": "~9.2.1",
    "expo-linking": "~2.3.1",
    "expo-splash-screen": "~0.11.4",
    "expo-status-bar": "~1.0.4",
    "expo-web-browser": "~9.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
    "react-native-config": "^1.4.4",
    "react-native-gesture-handler": "~1.10.3",
    "react-native-reanimated": "~2.2.0",
    "react-native-safe-area-context": "3.3.1",
    "react-native-screens": "~3.6.0",
    "react-native-web": "~0.17.1",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@react-native-community/async-storage": "^1.12.1",
    "@storybook/addon-actions": "^6.3",
    "@storybook/addon-knobs": "^6.3",
    "@storybook/addon-links": "^6.3",
    "@storybook/addon-ondevice-actions": "^5.3.23",
    "@storybook/addon-ondevice-knobs": "^5.3.25",
    "@storybook/react-native": "^5.3.25",
    "@storybook/react-native-server": "^5.3.23",
    "@types/jest": "^27.0.1",
    "@types/lodash": "4.14.172",
    "@types/react": "~17.0.19",
    "@types/react-native": "~0.64.13",
    "@types/styled-components": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest-expo": "~42.1.0",
    "lint-staged": "^11.1.2",
    "npm-check-updates": "^11.8.3",
    "plop": "^2.7.4",
    "prettier": "2.3.2",
    "react-native-storybook-loader": "^2.0.4",
    "sort-package-json": "^1.50.0",
    "typescript": "~4.4.2",
    "yarn-deduplicate": "^3.1.0"
  }
}
